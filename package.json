{
	"name": "vscode-elixir-exacto-knife",
	"displayName": "vscode-elixir-exacto-knife",
	"description": "helping devs write elixir code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.toggleTestFile",
		"onCommand:extension.runTestFile",
		"onCommand:extension.runFocusedTest",
		"onCommand:extension.runLastTestAgain"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "elixir",
				"extensions": [
					".ex",
					".exs"
				]
			}
		],
		"commands": [
			{
				"command": "vscode-elixir-exacto-knife.toggleTestFile",
				"title": "Toggle Test File"
			},
			{
				"command": "vscode-elixir-exacto-knife.runTestFile",
				"title": "Run Test File"
			},
			{
				"command": "vscode-elixir-exacto-knife.runFocusedTest",
				"title": "Run Focused Test"
			},
			{
				"command": "vscode-elixir-exacto-knife.runLastTestAgain",
				"title": "Run Last Test Again"
			}
		],
		"keybindings": [
			{
				"command": "extension.toggleTestFile",
				"key": "ctrl+shift+t",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runTestFile",
				"key": "ctrl+shift+r",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runFocusedTest",
				"key": "ctrl+r",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runLastTestAgain",
				"key": "cmd+y",
				"when": "editorLangId == 'elixir'"
			}
		],
		"configuration": {
			"title": "vscode-elixir-exacto-knife-run-test",
			"properties": {
					"vscode-elixir-exacto-knife-run-test.custom-command": {
							"type": "string",
							"default": "mix test",
							"description": "Command to run exunit. Example: \"mix test\""
					}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}