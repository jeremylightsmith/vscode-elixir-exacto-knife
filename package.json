{
	"name": "vscode-elixir-refactoring",
	"displayName": "Elixir Refactoring",
	"description": "helping devs write elixir code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.toggleTestFile",
		"onCommand:extension.runTestFile",
		"onCommand:extension.runFocusedTest",
		"onCommand:extension.runLastTestAgain",
		"onCommand:extension.expandAliases",
		"onCommand:extension.consolidateAliases"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "elixir",
				"extensions": [
					".ex",
					".exs"
				]
			}
		],
		"commands": [
			{
				"command": "extension.toggleTestFile",
				"title": "Toggle Test File"
			},
			{
				"command": "extension.runTestFile",
				"title": "Run Test File"
			},
			{
				"command": "extension.runFocusedTest",
				"title": "Run Focused Test"
			},
			{
				"command": "extension.runLastTestAgain",
				"title": "Run Last Test Again"
			},
			{
				"command": "extension.expandAliases",
				"title": "Expand Aliases"
			},
			{
				"command": "extension.consolidateAliases",
				"title": "Consolidate Aliases"
			}
		],
		"keybindings": [
			{
				"command": "extension.toggleTestFile",
				"key": "ctrl+shift+t",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runTestFile",
				"key": "ctrl+shift+r",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runFocusedTest",
				"key": "ctrl+r",
				"when": "editorLangId == 'elixir'"
			},
			{
				"command": "extension.runLastTestAgain",
				"key": "cmd+y",
				"when": "editorLangId == 'elixir'"
			}
		],
		"configuration": {
			"title": "Elixir Refactorings",
			"properties": {
				"vscode-elixir-refactoring.exfactor-command": {
					"type": "string",
					"default": "ex_factor",
					"description": "Command to run ex_factor (you'll need to install this somewhere). Example: \"ex_factor\""
				},
				"vscode-elixir-refactoring.exunit-command": {
					"type": "string",
					"default": "mix test",
					"description": "Command to run exunit. Example: \"mix test\""
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}